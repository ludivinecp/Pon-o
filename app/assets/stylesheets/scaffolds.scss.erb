/* GENERAL*/

.navbar{
/* IE10+ */ 
background-image: -ms-linear-gradient(bottom, #0D0905 0%, #2E1706 100%);

/* Mozilla Firefox */ 
background-image: -moz-linear-gradient(bottom, #0D0905 0%, #2E1706 100%);

/* Opera */ 
background-image: -o-linear-gradient(bottom, #0D0905 0%, #2E1706 100%);

/* Webkit (Safari/Chrome 10) */ 
