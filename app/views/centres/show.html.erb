<div class="container-fluid centre-show">
  <div class="row">
    <div class="col-lg-12">
      <h1><%=@centre.name%></h1>
    </div>
    <div class="col-lg-10 centre-photos">
      <ul>
        <li><%= image_tag @centre.picture1.thumb.url%></li>
        <li><%= image_tag @centre.picture2.thumb.url%></li>
        <li><%= image_tag @centre.picture3.thumb.url%></li>
        <li><%= image_tag @centre.picture4.thumb.url%></li>
      </ul>
   </div>
    <div class="col-md-6 col-md-offset-3 centre-description">
      <h1>Bonjour,</h1>
      <span class="glyphicon glyphicon-home"></span>
      <p><%=@centre.description%></p>
      <span class="glyphicon glyphicon-home" style="color:rgba(117, 83, 51, 0.61);"></span><p><%=@centre.address%></p>
      <span class="glyphicon glyphicon-earphone"style="color:rgba(117, 83, 51, 0.61);"></span><p><%=@centre.phone%></p>
    </div>
  </div>
</div>
<div class="section">
     <div class="container">
       <div class="row">
         <div class="col-md-12 centre-show">
           <h1>Prestations délivrées:</h1>
         </div>
       </div>
     </div>
   </div>
   <div class="section">
     <div class="container">
      <div class="row">
       <% @services.in_groups_of(3, false).each do |group| %>
          <% group.each do |service|%>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <%= image_tag service.image1.thumb.url%>
              <div class="caption">
                  <h3><%= service.title %></h3>
                  <%= service.date.strftime("%d/%m/%Y")%></br>
                  <p><%= service.try(:description) %></p>
              <%= link_to "Voir",service, class:'btn btn-success'%>
              <% if user_signed_in? %>
                <% if current_user.is_centre? %>
                 <p>Réservations</p>
                 <% if !@bookings%>
                   <p> Vous n'avez pas encore de réservation </p>
                 <% else %>
                    <ul>
                     <% @bookings.each do |booking| %>
                        <li><%= booking.rider.try(:first_name)%></br>
                           0<%= booking.rider.try(:phone)%></br>
                           <%= booking.number_of_people %> personne(s)</br>
                              <%if booking.validation?%>
                                 <p>Validé</p>
                               <%end%>
                        </li>
                      <%end%> <!-- @bookings.each do |booking| -->
                    </ul>
                   <%end%> <!-- !@bookings -->
                <%end%> <!-- if current_user.is_centre? -->
              <%end%> <!-- user signed in-->
              </div> <!-- class="caption" -->
            </div> <!-- class="thumbnail"-->
          </div> <!-- class="col-sm-6 col-md-4" -->
          <%end%> <!-- group.each do |service| -->
       <% end %> <!-- @services.in_groups_of-->
      </div> <!-- class row-->
    </div><!-- class container-->
   </div><!-- class section-->
</div> <!-- class="container-fluid centre-show"-->
