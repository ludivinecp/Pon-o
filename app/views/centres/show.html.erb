<div class="container-fluid centre-show">
  <div class="row">
    <div class="col-lg-12">
      <h1><%=@centre.name%></h1>
    </div>
    <div class="col-lg-10 centre-photos">
      <ul>
        <li><%= image_tag @centre.picture1.thumb.url%></li>
        <li><%= image_tag @centre.picture2.thumb.url%></li>
        <li><%= image_tag @centre.picture3.thumb.url%></li>
        <li><%= image_tag @centre.picture4.thumb.url%></li>
      </ul>
    </div>
    <div class="col-md-6 col-md-offset-3 centre-description">
      <h1>Bonjour,</h1>
      <span class="glyphicon glyphicon-home"></span>
      <p><%=@centre.description%></p>
      <span class="glyphicon glyphicon-home" style="color:rgba(117, 83, 51, 0.61);"></span><p><%=@centre.address%></p>
      <span class="glyphicon glyphicon-earphone"style="color:rgba(117, 83, 51, 0.61);"></span><p><%=@centre.phone%></p>
    </div>
    <div class="col-md-7 hidden-sm hidden-xs block-right">
      <div>
        <div id="map" style='width: 720px; height:750px;'></div>
      </div>
    </div>
      <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });

      </script>
    </div>
    </div>
  </div>
</div>
