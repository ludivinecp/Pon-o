<%=form_for(@centre, html: { multipart: true}) do |f| %>
<div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :Nom_de_l_entreprise %> <span style="color:red">*</span>
      <%= f.text_field :name, class:'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :Numéro_siret %><span style="color:red">*</span>
        <%= f.text_field :siret, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Numéro_ffe %> <span style="color:red">*</span>
        <%= f.text_field :ffe, class:'form-control' %>
      </div>
          <div class="form-group">
              <%= f.label :Numéro_de_téléphone %> <span style="color:red">*</span>
              <%= f.text_field :phone, class:'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :Address %>
                <%= f.text_area :address, class:'form-control' %>
              </div>
              <div class="picture">
                <%=f.file_field :picture%>
              </div>
                      <div class="form-group">
                          <%= f.hidden_field :user_id, :value => current_user.id, class:'form-control' %>
                        </div>
                        <div class="form-group">
                            <%= f.hidden_field :centre, :value => true, class:'form-control' %>
                          </div>
      <div class="actions">
        <%= f.submit "Valider mon profil", class:'btn btn-defult' %>
      </div>
  </div>
  <%end%>
