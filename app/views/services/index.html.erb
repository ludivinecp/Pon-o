<div class="container-fluid">
<div class="row">
  <h2> Services</h2>
  <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
    <h2>Custom search field</h2>
        <div id="custom-search-input">
            <div class="input-group col-md-12">
                <input type="text" class="form-control input-lg" placeholder="Recherche" />
                <span class="input-group-btn">
                    <button class="btn btn-info btn-lg" type="button">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
        </div>
  </div>
</div>

<%= form_tag services_path, method: :get do %>
  <%= label :search, "Search services near : " %>
  <%= text_field_tag :search, params[:search] %>

  <%= submit_tag "Search" %>
<% end %>

<div class="row">
  <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
    <p><% @centres.each do |centre|%></p>
    
    <div class="pins" class="transitions-enabled">
      <p><% centre.services.each do |service|%></p>
        <div class="box panel panel-default">

          <h2><%= service.title %></h2>
          <div class="image_centre">
          <%= image_tag "poneo-8.jpg" %>
            <p> price: € <%= service.price%></p>
            <p> Categorie: <%= service.category %></p>
            <p> Adresse: <%= service.centre.address %></p>
            <%= link_to 'Réserver', service, class:'btn btn-success'%>
          </div>
        </div>

      <% end %>
      <% end %>

    </div>
    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
      
    </div>
  </div>
</div>
</div>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});

</script>
<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>