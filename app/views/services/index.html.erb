<div class="container-fluid">
<div class="row">
  <h2> Services</h2>
  <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
    <h2>Custom search field</h2>
        <div id="custom-search-input">
            <div class="input-group col-md-12">
                <input type="text" class="form-control input-lg" placeholder="Recherche" />
                <span class="input-group-btn">
                    <button class="btn btn-info btn-lg" type="button">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
        </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">

    
    <div class="pins" class="transitions-enabled">
      <p><% @services.each do |service|%></p>
        <div class="box panel panel-default">

          <h2><%= service.title %></h2>
          <div class="image_centre">
          <%= image_tag "poneo-8.jpg" %>

          </div>
            <div class="panel-body">
              
              <p> Prix: € <%= service.price%></p>
              <p> Catégorie: <%= service.category %></p>
              <p> Adresse: <%= service.centre.address %></p>
                <div class="action">
                <%= link_to 'Réserver', service, class:'btn btn-success'%>
                </div>
            </div>
        </div>

      <% end %>

    </div>
    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
      
    </div>
  </div>
</div>
</div>


