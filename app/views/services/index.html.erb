<div class="container-fluid">
<div class="row">
  <h2> Services</h2>
  <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
    <h2>Custom search field</h2>
        <div id="custom-search-input">1
            <div class="input-group col-md-12">2
                <input type="text" class="form-control input-lg" placeholder="Recherche" />3
                <span class="input-group-btn">4
                    <button class="btn btn-info btn-lg" type="button">5
                        <i class="glyphicon glyphicon-search"></i>6
                    </button>
                </span>
            </div>
        </div>
  </div>
</div>

<%= form_tag services_path, method: :get do %>
  <%= label :search, "Search services near : " %>
  <%= text_field_tag :search, params[:search] %>

  <%= label :distance, "Distance : " %>
  <%= text_field_tag :distance, params[:distance] %>

  <%= submit_tag "Search" %>
<% end %>

<div class="row">
  <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">

    
    <div class="pins" class="transitions-enabled">
      <p><% @services.each do |service|%></p>
        <div class="box panel panel-default">

          <h2><%= service.title %></h2>
          <div class="image_centre">
          <%= image_tag "poneo-8.jpg" %>

          </div>
            <div class="panel-body">
              
              <p> Prix: € <%= service.price%></p>
              <p> Catégorie: <%= service.category %></p>
              <p> Adresse: <%= service.centre.address %></p>
                <div class="action">
                <%= link_to 'Réserver', service, class:'btn btn-success'%>
                </div>
            </div>
        </div>

      <% end %>

    </div>
    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
      
    </div>
  </div>
</div>
</div>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});

</script>