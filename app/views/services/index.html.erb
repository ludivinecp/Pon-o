<div class="container-fluid">
<div class="row">
  <h2> Services</h2>
  <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
    <h3>Rechercher les centres équestres</h3>
        <div class="input-group">



              <%= form_tag services_path, method: :get do %>
             
              <%= text_field_tag :search, params[:search], class:'input-large'%>
         
              <%= submit_tag "Search", class:'btn btn-success' %>
              <% end %>


</div>



<div class="row">
  <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
    <p><% @centres.each do |centre|%></p>
    
    <div class="pins" class="transitions-enabled">
      <p><% centre.services.each do |service|%></p>
        <div class="box panel panel-default">

          <h2><%= service.title %></h2>
          <div class="image_centre">
          <%= image_tag "poneo-8.jpg" %>
            <p> price: € <%= service.price%></p>
            <p> Categorie: <%= service.category %></p>
            <p> Adresse: <%= service.centre.address %></p>
            <%= link_to 'Réserver', service, class:'btn btn-success'%>
          </div>
        </div>

      <% end %>
      <% end %>

    </div>
    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
      
    </div>
  </div>
</div>
</div>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});

</script>
